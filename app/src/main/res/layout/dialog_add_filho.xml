<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Aventureiro(a)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/etNomeFilhoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome (ex: João)"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etLoginFilhoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Login único (ex: joao123)"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etSenhaFilhoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha (ex: 1234)"
            android:inputType="numberPassword"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha um Avatar:"
            android:textStyle="bold"
            android:textColor="#666"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/bg_rainbow_gradient"
                    android:padding="2dp"
                    android:layout_marginEnd="12dp"/>

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:layout_marginEnd="12dp"
                    android:alpha="0.5"/>

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/star_big_on"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:layout_marginEnd="12dp"
                    android:alpha="0.5"/>

                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:layout_marginEnd="12dp"
                    android:alpha="0.5"/>

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:layout_marginEnd="12dp"
                    android:alpha="0.5"/>

                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:background="#E0E0E0"
                    android:padding="10dp"
                    android:alpha="0.5"/>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnSalvarFilhoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRIAR PERFIL"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>